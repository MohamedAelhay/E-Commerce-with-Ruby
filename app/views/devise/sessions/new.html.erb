<section class="login_box_area section_gap">
		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
            <%= image_tag('login', class: "img-fluid")%>
						<div class="hover">
							<h4>New to our website?</h4>
							<p>There are advances being made in science and technology everyday, and a good example of this is the</p>
              <%= link_to "Create an Account", new_user_registration_path, class:"primary-btn"%>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					<div class="login_form_inner">
						<h3>Log in to enter</h3>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "row login_form"}) do |f| %>
							<div class="col-md-12 form-group">
                <%= f.email_field :email, autocomplete: "email", class: "form-control" , placeholder: "E-Mail", onfocus: "this.placeholder = ''", onblur: "this.placeholder = 'E-Mail'"%>
              </div>
              <div class="col-md-12 form-group">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" , placeholder: "Password", onfocus: "this.placeholder = ''", onblur: "this.placeholder = 'Password'" %>
              </div>
              <div class="col-md-12 form-group">
                <% if devise_mapping.rememberable? %>
                  <div class="creat_account">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>
              </div>
              <div class="col-md-12 form-group">
                <%= f.submit "Log In", class: "primary-btn" %>
              </div>
						<% end %>
            <%= render "devise/shared/links" %>

					</div>
				</div>
			</div>
		</div>
	</section>
