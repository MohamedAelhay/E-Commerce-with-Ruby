<section class="tracking_box_area section_gap">
  <div class="container">
    <div class="tracking_box_inner">
      <%= form_with(model: product, local: true, :class => 'row tracking_form') do |form| %>
        <% if product.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
            <% product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="col-md-12 form-group">
          <%= form.collection_select(:brand_id, @categories, :id, :name, :prompt => "Category") %>
        </div>

        <div class="col-md-12 form-group">
          <%= form.collection_select(:category_id, @brands, :id, :name, :prompt => "Brand") %>
        </div>

        <div class="col-md-12 form-group">
          <%= form.collection_select(:store_id, @stores, :id, :name, :prompt => "Store") %>
        </div>

        <div class="col-md-12 form-group">
          <%= form.text_field :title, class:'form-control', placeholder:'Title'%>
        </div>

        <div class="col-md-12 form-group">
          <%= form.text_area :description, class:'form-control', placeholder:'Description'%>
        </div>
        
        <div class="col-md-12 form-group">
        <%= form.text_field :price, class:'form-control', placeholder:'Price' %>
        </div>
        
        <div class="col-md-12 form-group">
        <%= form.number_field :quantity, class:'form-control', placeholder:'Quantity' %>
        </div>
        
        <div class="col-md-12 form-group">
          <%= form.file_field :image, class:'form-control', placeholder:'Brand'%>
        </div>

        <div class="col-md-12 form-group">
          <%= form.submit 'Submit', :class => 'primary-btn' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
